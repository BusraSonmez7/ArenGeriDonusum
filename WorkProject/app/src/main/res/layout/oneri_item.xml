<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:elevation="3dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/urun_item_tasarim"
    android:id="@+id/item_c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txttarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarih"
            android:textSize="14dp"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/thema_blue"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/txtoneri_baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Öneri Başlığı"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_weight="3"
            android:textColor="@color/thema_blue"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/txtoneri_aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Açıklama"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/thema_blue"
            android:paddingStart="10dp"
            android:maxLength="40"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingEnd="20dp"
            >

            <ImageView
                android:id="@+id/okundu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/check"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/sil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/remove"
                android:scaleType="centerInside"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>