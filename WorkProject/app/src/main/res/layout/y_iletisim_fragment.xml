<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/anaLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="İLETİŞİM BİLGİLERİNİZ"
            android:textColor="@color/thema_yellow"
            android:textStyle="bold"
            android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/iletisimLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edittext_border2"
        android:layout_margin="10dp"
        android:paddingBottom="10dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İLETİŞİM BİLGİLERİ"
            android:textColor="@color/thema_blue"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/telLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEL:"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:hint="Telefon numaranızı girin.."
                android:textColorHint="@color/thema_blue_70"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAİL:"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:hint="Email adresinizi girin.."
                android:textColorHint="@color/thema_blue_70"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adresLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edittext_border2"
        android:layout_margin="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADRES"
            android:textColor="@color/thema_blue"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/adres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/thema_blue"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Adresinizi girin.."
            android:textColorHint="@color/thema_blue_70"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sosyalmedyaLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edittext_border2"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOSYAL MEDYA"
            android:textColor="@color/thema_blue"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/facebooktxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Facebook hesabınızı girin.."
                android:textColorHint="@color/thema_blue_70"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/insta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/instagram"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Instagram hesabınızı girin.."
                android:textColorHint="@color/thema_blue_70"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitterl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/twitter"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/thema_blue"
                android:textSize="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Twitter hesabınızı girin.."
                android:textColorHint="@color/thema_blue_70"/>

        </LinearLayout>

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewUye"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/thema_yellow"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/rlt_buton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/btnkaydet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="KAYDET"
                    android:textColor="@color/thema_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>